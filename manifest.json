{
  "manifest_version": 2,
  "name": "cliper",
  "version": "0.1",
  "description": "cliper",
  "permissions": [
    "tabs",
    "storage",
    "contextMenus",
    "notifications",
    "http://cliper.com.cn/*",
    "http://cliper.com.cn/*/*",
    "http://localhost:5000/*",
    "http://localhost:5000/*/*"
  ],
  "icons": {
    "16": "icons/cliper_16.png",
    "48": "icons/cliper_48.png",
    "64": "icons/cliper_64.png",
    "128": "icons/cliper_128.png"
  },
  "browser_action": {
    "default_icon": {
      "38": "icons/cliper_38.png"
    },
    "default_popup": "view/popup.html",
    "default_title" : "保存到cliper"
  },
  "background": {
    "scripts": ["js/vendor/jquery-3.1.1.min.js", "js/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches" : ["http://*/*", "https://*/*"],
      "js": ["js/vendor/jquery-3.1.1.min.js", "js/vendor/keyboard.min.js", "js/selection.js", "js/notification.js"],
      "css": ["css/notification.css"]
    }
  ]
}
